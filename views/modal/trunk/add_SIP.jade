extends ../layout_trunk
block content
    script(type='text/javascript', src='/js/modal/trunk/create.js')
    if multi
      script(type='text/javascript', src='/js/modal/trunk/typeSIP_multi.js')
    else
      script(type='text/javascript', src='/js/modal/trunk/typeSIP.js')
    .widget-box(style='min-width: 500px; margin-bottom: 0; margin-top: 0;')
        .widget-title
            ul.nav.nav-tabs
              li.active
                a(href='#tab1', data-toggle='tab') Basic
              li
                a(href='#tab2', data-toggle='tab') Advanced
              li
                a(href='#tab3', data-toggle='tab') Expert
          .widget-content.tab-content
            #tab1.tab-pane.active
              form(name='form-basic', method='get')
                .form-horizontal
                  .control-group
                    label.control-label Name
                    .controls.left
                      input.span6(type='text', name='name')
                  .control-group
                    label.control-label Host
                    .controls.left
                      input(type='text', name='host', value='dynamic')
                  .control-group
                    label.control-label Codecs
                    .controls.left
                      input(type='hidden', name='disallow', value='all')
                      input(type='text', name='allow')
                  .control-group
                    label.control-label Context
                    .controls.left
                      input.span6(name='context', type='text', value='from-trunk')

                  if multi
                    .control-group
                      label.control-label Target server
                      .controls.left
                        input.input-select2(name='node', type='text')

                  .control-group
                    label.control-label Disabled
                    .controls.left
                      input.input-select2(name='commented', type='text', style='min-width: 200px;')
                  .control-group
                    label.control-label Comment
                    .controls.left
                      textarea(name='comment')
            #tab2.tab-pane
              form(name='form-advanced', method='get')
                .form-horizontal
                  .control-group
                    label.control-label Canreinvite
                    .controls.left
                      input(type='text', name='canreinvite', style='min-width: 200px;')
                  .control-group
                    label.control-label Qualify
                    .controls.left
                      input(type='text', name='qualify', style='min-width: 200px;')
                  .control-group
                    label.control-label Insecure
                    .controls.left
                      input(name='insecure', type='text', style='min-width: 200px;')
                  .control-group
                    label.control-label Type
                    .controls.left
                      input(type='text', name='type', style='min-width: 200px;')
                  .control-group
                    label.control-label NAT
                    .controls.left
                      input(name='nat', type='text', style='min-width: 200px;')
                  .control-group
                    label.control-label Call-limit
                    .controls.left
                      input.span6(name='call-limit', type='text', value='0')
                  .control-group
                    label.control-label Caller id
                    .controls.left
                      input.span6(name='callerid', type='text')
                  .control-group
                    label.control-label From user
                    .controls.left
                      input.span6(name='fromuser', type='text')
                  .control-group
                    label.control-label From domain
                    .controls.left
                      input.span6(name='fromdomain', type='text')
                  .control-group
                    label.control-label Default user
                    .controls.left
                      input.span6(name='defaultuser', type='text')
                  .control-group
                    label.control-label Secret
                    .controls.left
                      input.span6(name='secret', type='text')
                  .control-group
                    label.control-label Callback extension
                    .controls.left
                      input.span6(name='callbackextension', type='text')
            #tab3.tab-pane(style='text-align: center;')
              form(name='form-expert', method='get')
                input(type='hidden', name='custom_type', value='SIP')
                input(type='hidden', name='action', value='create')
                .row-fluid(style='text-align: left;')
                  .span6
                    h5 Basic + Advanced:
                    textarea(name='config_1', style='display: none;')
                    #config_1(style='width: 100%; height: 250px;')
                  .span6
                    h5 Expert:
                    textarea(name='config_2', style='display: none;')
                    #config_2(style='width: 100%; height: 250px;')