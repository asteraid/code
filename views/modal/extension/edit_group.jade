extends ../layout
block content
  .widget-box(style='min-width: 500px; margin-bottom: 0; margin-top: 0;')
    form#form-main.form-horizontal
      input(type='hidden', name='ids')
      .control-group
        h5
          span(style='margin-left: 30px;') Important! You edit the following extensions: 
          span(style='color: #aa0000;')#extensions-info
      .control-group
        label.control-label Template
        .controls.left
          input(name='template', style='width: 200px;', 'class'='input-select2')
      .control-group
        label.control-label Context
        .controls.left
          input(name='context', style='width: 200px;', 'class'='input-select2')
  script(type='text/javascript', src='/js/custom/extensions/edit_group.js')