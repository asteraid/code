extends ../layout
block content
    .widget-box(style='min-width: 500px; margin-bottom: 0; margin-top: 0;')
        form#form-main.form-horizontal
            input(type='hidden', name='ids')
            .control-group
                h5(style='margin-left: 30px;')
                    span Important! You edit the following extensions:
                    span#extensions-info
            .control-group
                label.control-label Template
                .controls.left
                    input.input-select2(name='template', style='width: 82%;')
            .control-group
                label.control-label Context
                .controls.left
                    input.input-select2(name='context', style='width: 82%;')
    script(type='text/javascript', src='/js/custom/extensions/edit_group.js')